@model IEnumerable<Employee>
@{
    int nr = 1;
}


@if (User.Identity.IsAuthenticated)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">E-mail</th>

            </tr>
        </thead>
        <tbody>
            @foreach(Employee emp in Model)
            {
                <tr class="table-primary">
                    <th scope="row">@nr</th>
                    <td>@emp.Email</td>
                    <td><a class="btn btn-primary btn-warning" asp-controller="Vacations" asp-action="YourEmployeesVacation" asp-route-Email="@emp.Email">Vacations</a></td>
                </tr>
                
                nr++;
            }
        </tbody>
    </table>

    <a class="btn btn-primary btn-warning" asp-controller="Home" asp-action="NewEmployees">New Employees</a>
}