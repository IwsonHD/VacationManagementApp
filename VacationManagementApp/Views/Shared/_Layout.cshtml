   <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VacationManagementApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="~/css/minty.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VacationManagementApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/BootStrapTheme.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand text-white h1" asp-controller="Home" asp-action="Index">Vacation Manager App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    @if (User.IsInRole("Employee"))
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item pb-1">
                                <a class="nav-link active" asp-controller="Home" asp-action="HowToUse">
                                    How to use
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li>
                                <a class="nav-link active" asp-controller="Vacations" asp-action="Index">
                                    Your vacations
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li>
                                <a class="nav-link active" asp-controller="Home" asp-action="YourData">
                                    Your data
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                        </ul>
                        <a class=" btn btn-secondary my-2 my-sm-0" asp-controller="Account" asp-action="Logout">Logout</a>
                    }
                    else if (User.IsInRole("Employer"))
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item pb-1">
                                <a class="nav-link active" asp-controller="Home" asp-action="HowToUse">
                                    How to use
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li>
                                <a class="nav-link active" asp-controller="Home" asp-action="YourData">
                                    Your data
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                            <li>
                                <a class="nav-link active" asp-controller="Home" asp-action="YourEmployees">
                                    Your employees
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                        </ul>
                        <a class=" btn btn-secondary my-2 my-sm-0" asp-controller="Account" asp-action="Logout">Logout</a>

                    }
                    else
                    {
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item pb-1">
                                <a class="nav-link active" asp-controller="Home" asp-action="HowToUse">
                                    How to use
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>

                        </ul>
                        <div class="p-1">
                            <a class=" btn btn-secondary my-2 my-sm-0" asp-controller="Account" asp-action="Registration">Register</a>
                        </div>
                        <div class="p-1">
                            <a class=" btn btn-secondary my-2 my-sm-0" asp-controller="Account" asp-action="Login">Login</a>

                        </div>
                        

                    }

                </div>
        </nav>
    </header>
    <partial name="_popups"/>
    <div class="container">
        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - VacationManagementApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
