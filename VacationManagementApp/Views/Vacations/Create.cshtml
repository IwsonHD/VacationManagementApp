@model Vacation


<h2>Create Vacation</h2>
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="HowManyDays"></label>
        <input asp-for="HowManyDays" class="form-control" required>
        <span asp-validation-for="HowManyDays" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="When"></label>
        <input asp-for="When" class="form-control" required>
        <span asp-validation-for="When" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
